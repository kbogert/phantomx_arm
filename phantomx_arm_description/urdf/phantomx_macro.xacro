         <parent link="link_3" />
         <child link="link_4" />
         <axis xyz="0 0 1" />
         <limit lower="-1.745" upper="1.745" effort="13" velocity="1.571" />
      </joint>
      <joint name="joint_5" type="fixed">
         <origin xyz="${M_SCALE*0} ${M_SCALE*7} ${M_SCALE*0}" rpy="${-M_PI/2} ${-M_PI/2} ${M_PI*0}" />
         <parent link="link_4" />
         <child link="link_5" />
